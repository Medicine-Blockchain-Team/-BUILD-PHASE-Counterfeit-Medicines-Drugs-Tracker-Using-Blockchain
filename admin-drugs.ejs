<!DOCTYPE html>
<html>
<head>
  <title>Admin - Manage Drugs</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f8fc;
      margin: 0;
      padding: 20px;
      color: #333;
    }

    h1 {
      color: #1d3557;
      text-align: center;
    }

    p {
      text-align: right;
      font-weight: bold;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #ffffff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

    th, td {
      padding: 12px 15px;
      text-align: center;
      border: 1px solid #ddd;
    }

    thead {
      background-color: #dceefb;
    }

    th {
      color: #2a4365;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    tr:hover {
      background-color: #f1f9ff;
    }
  </style>
</head>
<body>
  <h1>Admin Dashboard - Drugs</h1>
  <p>Welcome, <%= user.name %></p>

  <!-- Add logic to display drug list -->
  <table border="1">
    <thead>
      <tr>
        <th>Drug ID</th>
        <th>Name</th>
        <th>Manufacturer</th>
        <th>Status</th>
        <th>Verified</th> <!-- New Column -->
      </tr>
    </thead>
    <tbody>
      <% if (drugs && drugs.length > 0) { %>
        <% drugs.forEach(function(drug) { %>
          <tr>
            <td><%= drug.id %></td>
            <td><%= drug.name %></td>
            <td><%= drug.manufacturer %></td>
            <td><%= drug.status %></td>
            <td>
              <% if (drug.isVerified) { %>
                ✅
              <% } else { %>
                  ❌
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="4">No drugs found.</td></tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
