<!-- views/partials/navbar.ejs -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">MedTracker</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if (user && user.role === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          
        <% } else if (user && user.role === 'manufacturer') { %>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/add-drug">Add Drug</a>
          </li>
        <% } else if (user && user.role === 'patient') { %>
          <li class="nav-item">
            <a class="nav-link" href="/verify">Verify Drug</a>
          </li>
        <% } %>
      </ul>

      <ul class="navbar-nav ms-auto">
        <% if (!hideAuthLinks) { %>
          <% if (user) { %>
            <li class="nav-item">
              <span class="navbar-text text-light me-3">Hello, <%= user.name %> (<%= user.role %>)</span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
